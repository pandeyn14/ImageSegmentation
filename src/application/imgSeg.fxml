<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"  fx:controller="application.ImgSegController">
  <bottom>
    <HBox alignment="CENTER">
      <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
      </padding>
      <Button fx:id="loadImageButton" alignment="CENTER" onAction="#loadImage" text="Load Image" />
    </HBox>
  </bottom>
  <center>
    <VBox alignment="CENTER">
      <padding>
        <Insets left="10.0" right="10.0" />
      </padding>
      <ImageView fx:id="currentFrame" />
    </VBox>
  </center>
  <top>
    <VBox>
      
      <Separator />
      <HBox alignment="CENTER" spacing="10.0">
        <padding>
          <Insets bottom="10.0" top="10.0" />
        </padding>
        <CheckBox fx:id="canny" onAction="#cannySelected" text="Edge detection" />
        <Label text="Canny Threshold" />
        <Slider fx:id="threshold" disable="true" />
        <CheckBox fx:id="dilateErode" onAction="#dilateErodeSelected" text="Background removal" />
        <CheckBox fx:id="inverse" disable="true" text="Invert" />
      </HBox>
      <Separator />
    </VBox>
  </top>
</BorderPane>
